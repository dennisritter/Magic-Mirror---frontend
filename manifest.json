{
    "dependencies": {
        "app.js": {
            "files": ["./scripts/**/*.js"],
            "main": true
        },
        "libs.js": {
            "bower": [
                "angular",
                "angular-messages",
                "angular-password",
                "angular-cookies",
                "angular-route",
                "bootstrap-sass",
                "font-awesome",
                "jquery",
                "jquery-ui",
                "grid"
            ]
        },
        "main.css": {
            "files": ["./styles/sass/main.scss"]
        },
        "templates.js": {
            "files": ["./templates/**/*.html"]
        }
    },
    "paths": {
        "source": "./",
        "imageSource": "./assets/img/**/*",
        "dist": {
            "scripts": "./public/dist/scripts",
            "styles": "./public/dist/styles",
            "fonts": "./public/dist/fonts",
            "images": "./public/dist/img"
        },
        "bower": "./bower_components",
        "distribution" : "./public"
    },
    "config": {
        "ngModuleName": "perna"
  }
}
